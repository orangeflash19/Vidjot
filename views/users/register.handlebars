<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">

      <img class="logo" src="/img/logo.png" alt="logo.png">

      <h3 class="text-center"> Account Register </h3>

      <form class="" action="" method="post">

        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" type="text" name="name" placeholder="enter your name" value="{{name}}" required>
        </div>

        <div class="form-group">
          <label for="email">email</label>
          <input class="form-control" type="email" name="email" placeholder="enter your email" value="{{email}}" required>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" name="password" placeholder="enter your password" value="{{password}}" required>
        </div>

        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input class="form-control" type="password" name="password2" placeholder="enter your password again" value="{{password2}}" required>
        </div>

        <div class="text-center">
          <button class="btn btn-primary align-center" type="submit" name="registerButton"> Register </button>
        </div>

      </form>
    </div>
  </div>
</div>
